{
  "name": "ctype",
  "version": "1.0.0",
  "description": "A ClojureScript to JavaScript compiler with NW.js demo",
  "type": "module",
  "main": "public/index.html",
  "window": {
    "title": "CType NW.js Demo",
    "width": 800,
    "height": 600
  },
  "scripts": {
    "build": "shadow-cljs compile main server",
    "build:release": "shadow-cljs release main server",
    "dev": "shadow-cljs watch main server",
    "test": "shadow-cljs compile test && karma start --single-run",
    "test:ts": "jest",
    "test:watch": "shadow-cljs watch test",
    "clean": "rimraf dist public/js",
    "prepublishOnly": "npm run clean && npm run build:release",
    "hello:build": "shadow-cljs compile hello",
    "hello:run": "node dist/hello.cjs",
    "hello": "npm run hello:build && npm run hello:run",
    "start:server": "node dist/server.cjs",
    "start:app": "nw .",
    "start": "concurrently \"npm run start:server\" \"npm run start:app\""
  },
  "keywords": [
    "clojurescript",
    "typescript",
    "web",
    "development",
    "nw.js",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cljs-test": "^0.1.0",
    "nw": "^0.85.0",
    "nw-builder": "^4.4.1",
    "rimraf": "^5.0.5",
    "shadow-cljs": "^2.28.22",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.16.0"
  }
}
